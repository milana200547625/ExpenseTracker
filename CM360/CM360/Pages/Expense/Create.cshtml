@page
@model CM360.Pages.Expense.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Expense</h1>
<hr />
<h4 align="center" style="color:red">@Html.ValidationMessage("DuplicateContact")</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Expense.Name" class="control-label"></label>
                <input asp-for="Expense.Name" class="form-control" />
                <span asp-validation-for="Expense.Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Expense.EmployeeNumber" class="control-label"></label>
                <input asp-for="Expense.EmployeeNumber" class="form-control" />
                <span asp-validation-for="Expense.EmployeeNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Expense.ExpenseType" class="control-label"></label>
                <select asp-for="Expense.ExpenseType" class="form-control">
                    <option selected>Select</option>
                    <option value="certification">Certification</option>
                    <option value="internetBill">Internet Bill</option>
                    <option value="relocation">Relocation</option>
                    <option value="teamLunch">Team Lunch</option>
                    <option value="travel">Travel</option>                    
                </select>
                <span asp-validation-for="Expense.ExpenseType" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>  
            <br />
            <div class="form-group">
                <label asp-for="Expense.Email" class="control-label"></label>
                <input asp-for="Expense.Email" class="form-control" />
                <span asp-validation-for="Expense.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <br>
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <br/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

